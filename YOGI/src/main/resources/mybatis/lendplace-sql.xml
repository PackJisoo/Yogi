<!-- 장소예약 신청 -->
<insert id="insertPlacebook" parameterType="hashmap">
	<![CDATA[
		INSERT INTO PLACEBOOK (
			PB_NO,
			L_NO,
			M_NO,
			L_SDATE )
		VALUES (
			PLACEBOOK_SEQ.NEXTVAL,
			#{L_NO},
			1,
			sysdate)
	]]>
</insert>

